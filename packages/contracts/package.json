{
  "name": "@nostra/contracts",
  "version": "1.0.0",
  "description": "Nostra Prediction Market Smart Contracts",
  "main": "index.js",
  "private": true,
  "scripts": {
    "compile": "npx hardhat compile",
    "test": "npx hardhat test",
    "test:unit": "npx hardhat test test/unit/*.test.ts",
    "test:integration": "npx hardhat test test/integration/*.test.ts",
    "coverage": "npx hardhat coverage",
    "deploy:local": "npx hardhat run scripts/deploy/deploy-local.ts --network localhost",
    "deploy:polygon": "npx hardhat run scripts/deploy/deploy.ts --network polygon",
    "deploy:polygon-amoy": "npx hardhat run scripts/deploy/deploy.ts --network polygonAmoy",
    "deploy:bsc": "npx hardhat run scripts/deploy/deploy-bsc.ts --network bsc",
    "deploy:bsc-testnet": "npx hardhat run scripts/deploy/deploy-bsc-testnet.ts --network bscTestnet",
    "market:create": "npx hardhat run scripts/interact/world-series-mvp/01-create-market.ts --network bscTestnet",
    "market:bet": "npx hardhat run scripts/interact/world-series-mvp/02-place-bet.ts --network bscTestnet",
    "market:bet:ohtani": "npx hardhat run scripts/interact/world-series-mvp/02-place-bet-ohtani.ts --network bscTestnet",
    "market:bet:guerrero": "npx hardhat run scripts/interact/world-series-mvp/02-place-bet-guerrero.ts --network bscTestnet",
    "market:bet:yamamoto": "npx hardhat run scripts/interact/world-series-mvp/02-place-bet-yamamoto.ts --network bscTestnet",
    "market:prices": "npx hardhat run scripts/interact/world-series-mvp/03-get-prices.ts --network bscTestnet",
    "market:simulate-trading": "npx hardhat run scripts/interact/world-series-mvp/04-simulate-trading.ts --network bscTestnet",
    "market:buy-pressure": "npx hardhat run scripts/interact/world-series-mvp/05-simulate-buying-pressure.ts --network bscTestnet",
    "market:verify-trades": "npx hardhat run scripts/interact/world-series-mvp/verify-trades.ts --network bscTestnet",
    "market:resolve": "npx hardhat run scripts/interact/world-series-mvp/03-resolve-market.ts --network bscTestnet",
    "market:redeem": "npx hardhat run scripts/interact/world-series-mvp/04-redeem-tokens.ts --network bscTestnet",
    "verify": "npx hardhat verify",
    "clean": "npx hardhat clean",
    "size": "npx hardhat size-contracts"
  },
  "keywords": [
    "prediction-market",
    "smart-contracts",
    "ethereum",
    "polygon",
    "ctf"
  ],
  "author": "Nostra Team",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.8",
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.2",
    "@nomicfoundation/hardhat-ethers": "^3.0.5",
    "@nomicfoundation/hardhat-verify": "^1.1.1",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.11",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.10.6",
    "chai": "^4.3.10",
    "ethers": "^6.9.0",
    "hardhat": "^2.19.1",
    "hardhat-gas-reporter": "^1.0.9",
    "solidity-coverage": "^0.8.5",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.1",
    "dotenv": "^16.3.1"
  }
}
